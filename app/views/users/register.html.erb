<div class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">
  <% if @user.errors.any? %>
    
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      </div> 
  <% end %>

    <h1 class="form-heading">Register a new user</h1>
    
    <%= form_for @user, url: new_path, html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-9 required">
          <%= f.email_field :email, class: "form-control", placeholder: "email@example.com", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-9 required">
          <%= f.password_field :password, class: "form-control", required: true   %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm password", class: "col-sm-3 control-label", id: "confirm-label" %>
        <div class="col-sm-9 required">
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :avatar, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.file_field :avatar, class: "form-control" %>
        </div>
      </div>
      <div class="form-group captcha">
        <div class="col-sm-offset-3 col-sm-9 required">
          <%= show_simple_captcha(:object => 'user') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-8">
          <%= f.submit "Register", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
    </div>
</div>


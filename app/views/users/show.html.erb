<div class="row">
  <h1>User profile for <%= @user.email %></h1>
	<div class="col-md-6 well well-lg">
		<p><span>Username: </span><%= @user.email %></p>
		<p><span>Bio: </span><%= @user.bio %></p>
		<p><span>Member Since: </span><%= @user.created_at.strftime "%B %Y" %></p>
		<% if @user.avatar? %>
		<%= image_tag @user.avatar.url(:medium), class: "avatar-img"%>
		<% end %>
			<% if logged_in? && @user.id == current_user.id %>
				<%= link_to "Edit Profile", edit_path, class: "btn btn-primary btn-sm" %>
			<% end %>
	</div>
</div>